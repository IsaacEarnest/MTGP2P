<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="295dp"
        android:layout_height="58dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="369dp"
        android:text="Connection Pending"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/acceptConnection"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="35dp"
        android:onClick="acceptRequest"
        android:text="Accept Player"
        app:layout_constraintBottom_toTopOf="@+id/create_PlayGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/connectionStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_PlayGame"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="38dp"
        android:onClick="playGameP1"
        android:text="Play Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/connectionStatus"
        app:layout_constraintTop_toBottomOf="@+id/acceptConnection" />

    <TextView
        android:id="@+id/IPaddress"
        android:layout_width="270dp"
        android:layout_height="22dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="143dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/connectionStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>