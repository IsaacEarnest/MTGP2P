<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">

    <EditText
        android:id="@+id/IPnumber"
        android:layout_width="225dp"
        android:layout_height="56dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Enter IP address"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/requestConnection"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="85dp"
        android:onClick="requestConnection"
        android:text="Connect"
        app:layout_constraintBottom_toTopOf="@+id/join_PlayGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/joinStatus"
        android:layout_width="285dp"
        android:layout_height="37dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="201dp"
        android:text="pending status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IPnumber" />

    <Button
        android:id="@+id/join_PlayGame"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="124dp"
        android:onClick="playGameP2"
        android:text="Play Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestConnection" />
</android.support.constraint.ConstraintLayout>